{
  "name": "devcontainer-build-run",
  "version": "0.0.0",
  "private": true,
  "description": "GitHub action for building and running VS Code dev containers",
  "main": "lib/main.js",
  "scripts": {
    "tsc-version": "tsc --version",
    "build": "tsc --build",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint --fix src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run tsc-version && npm run build && npm run format && npm run lint && npm run package #&& npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stuartleeks/devcontainer-build-run.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.4.0",
    "@actions/exec": "^1.1.0",
    "devcontainer-build-run-common": "file:../common",
    "jsonc-parser": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^15.12.2",
    "@typescript-eslint/parser": "^5.21.0",
    "@vercel/ncc": "^0.28.6",
    "eslint": "^8.14.0",
    "eslint-plugin-github": "^4.1.3",
    "eslint-plugin-jest": "^26.1.5",
    "jest": "^27.0.0",
    "ts-jest": "^27.1.4",
    "jest-circus": "^27.0.4",
    "js-yaml": "^4.1.0",
    "prettier": "2.3.1",
    "typescript": "^4.6.3"
  }
}
