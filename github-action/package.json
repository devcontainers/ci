{
  "name": "devcontainer-build-run",
  "version": "0.0.0",
  "private": true,
  "description": "Action to simplify using Dev Containers (https://containers.dev) in GitHub workflows",
  "main": "lib/main.js",
  "scripts": {
    "tsc-version": "tsc --version",
    "build": "tsc --build",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint --fix src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run tsc-version && npm run build && npm run format && npm run lint && npm run package #&& npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devcontainers/ci.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "devcontainer-build-run-common": "file:../common",
    "jsonc-parser": "^3.3.1",
    "truncate-utf8-bytes": "^1.0.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.1",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^5.1.8",
    "eslint-plugin-jest": "^28.11.0",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3",
    "@types/truncate-utf8-bytes": "^1.0.2"
  }
}